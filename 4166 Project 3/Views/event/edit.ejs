<%- include('../partials/header.ejs')%>    
      <div class="LCont"></div>
      <div class="CCont">
        <form class="fCont" method = "POST" action = "/events/<%=event.id%>?_method=PUT">
            <h3 class="topicTitle">Type</h3>
            <input type="text" name="category" placeholder="Category" value = "<%= event.category%>" required>
            <h3 class="titleTitle">Title</h3>
            <input type="text" id="title" name="title" value = "<%= event.title%>" required>
            <h3 class="hostTitle">Host</h3>
            <input type="text" id="host" name="host" value = "<%= event.host%>" required>
            <h3 class="detailsTitle">Details</h3>
            <input type="text" id="details" name="details" value = "<%= event.details%>" required>
            <h3 class="locationTitle">Location</h3>
            <input type="text" id="location" name="location" value = "<%= event.location%>" required>
            <h3 class="dateTitle">Date</h3>
            <input type="date" id="date" name="date" value = "<%= event.date%>" required>
            <h3 class="startTitle">Start</h3>
            <input type="time" id="startTime" name="startTime" value = "<%= event.startTime%>" required>
            <h3 class="endTitle">End</h3>
            <input type="time" id="endTime" name="endTime" value = "<%= event.endTime%>" required>
            <h3 class="imageTitle">Image URL</h3>
            <input type="url" id="image" name="image" value = "<%= event.image%>" required>
            <input class="createEventBtn" type="submit" value="Submit">
          </form>
      </div>  
      <div class="RCont"></div>
<%- include('../partials/footer.ejs')%>